    <servlet>
        <servlet-name>Main</servlet-name>
        <servlet-class>eionet.gdem.deprecated.Main</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RpcRouter</servlet-name>
        <servlet-class>eionet.rpcserver.servlets.XmlRpcRouter</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>TmpUploadServlet</servlet-name>
        <servlet-class>eionet.gdem.web.struts.qasandbox.TmpUploadServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>TmpUploadServlet</servlet-name>
        <url-pattern>/qasandbox/upload</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>downloadServlet</servlet-name>
        <servlet-class>eionet.gdem.web.FileDownloadServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Main</servlet-name>
        <url-pattern>/main</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RpcRouter</servlet-name>
        <url-pattern>/RpcRouter</url-pattern>
    </servlet-mapping>
<!--    <servlet-mapping>
        <servlet-name>action</servlet-name>
        <url-pattern>/do/*</url-pattern>
    </servlet-mapping>-->
    <servlet-mapping>
        <servlet-name>downloadServlet</servlet-name>
        <url-pattern>/queries/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>downloadServlet</servlet-name>
        <url-pattern>/schema/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>downloadServlet</servlet-name>
        <url-pattern>/tmp/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>downloadServlet</servlet-name>
        <url-pattern>/log/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>downloadServlet</servlet-name>
        <url-pattern>/xmlfile/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>downloadServlet</servlet-name>
        <url-pattern>/tmpfile/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>downloadServlet</servlet-name>
        <url-pattern>/xsl/*</url-pattern>
    </servlet-mapping>
